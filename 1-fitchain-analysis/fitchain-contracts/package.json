    "openzeppelin-solidity": "2.1.2",
    "solc": "^0.5.0",
    "solidity-coverage": "^0.5.11",
    "solium": "^1.1.8",
    "truffle": "^5.0.0-user-level-mnemonic.0",
    "truffle-config": "^1.0.4",
    "truffle-expect": "0.0.4",
    "truffle-hdwallet-provider": "^1.0.0-web3one.2",
